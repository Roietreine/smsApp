<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/Llayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="6dp"
    android:background="@color/sms_bg"
    android:padding="16dp"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_sms_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"
        tools:text="Sample user sender"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_sms_body"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:ellipsize="marquee"
        android:layout_height="wrap_content"
        android:singleLine="true"
        tools:text="Sample text message sent by the user"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/sms_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/date_color"
        android:textSize="12sp"
        tools:text="mm/dd/yyyy" />


</LinearLayout>